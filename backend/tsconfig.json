{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loopback/build/config/tsconfig.common.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src"],
  "remoting": {
    "cors": true,
    "handleErrors": false
  },
  "cors": {
    "params": {
      "origin": true,
      "credentials": true,
      "maxAge": 86400
    }
  }
}
